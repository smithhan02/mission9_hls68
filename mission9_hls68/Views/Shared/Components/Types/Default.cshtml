
@{
}
@model  IEnumerable<string>

<div padding ="2px">
    <div class= "mt-1">
        <a asp-controller="Home" asp-action="Index" asp-route-Category="" asp-route-pageNum="1" class="btn btn-outline-secondary">Home</a>
    </div>

    @foreach (string c in Model)
    {
        //if statement shortcut determines the button type

        <div class= "mt-1">
            
            <a asp-controller="Home" asp-action="Index" asp-route-Category="@c" asp-route-pageNum="1"
               class="btn @(ViewBag.SelectedCategory == c ? "btn-primary" : "btn-outline-secondary")">@c</a>
        </div>
    }
</div>